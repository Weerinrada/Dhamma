from pydub import AudioSegment
import os

def separate_speakers(input_file, output_dir):
    # Load the audio file
    audio = AudioSegment.from_wav(input_file)

    # Define the minimum duration of each segment in milliseconds
    min_duration = 1000

    # Initialize an empty list to store the segments
    segments = []

    # Split the audio into segments based on silence
    for i in range(len(audio)):
        if audio[i:i+min_duration].dBFS < -40:
            if len(segments) > 0:
                last_segment = segments[-1]
                if last_segment.duration_seconds < 1:
                    segments[-1] = last_segment._spawn(last_segment.raw_data + audio[i:i+min_duration].raw_data)
                else:
                    segments.append(audio[i:i+min_duration])
            else:
                segments.append(audio[i:i+min_duration])

    # Save each segment as a separate wav file
    for i, segment in enumerate(segments):
        output_file = os.path.join(output_dir, f"speaker_{i}.wav")
        segment.export(output_file, format="wav")

# Example usage
input_file = "your_wav_file.wav"
output_dir = "output"
separate_speakers(input_file, output_dir)
